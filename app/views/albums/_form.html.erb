<%= form_for(@album) do |f| %>
  <br><br>
  <center>
    <table>
     <tr>
        <div class="field">
       <td align="right"><b><%= f.label :album_name %></b></td><td><%= f.text_field :album_name %></td>
<%unless @album.errors[:album_name].blank?%> <td class="validation_error_new_album">Album Name <%=@album.errors[:album_name]%></td>  <%end%>
      </div>
     </tr>
     <tr> 
      <div class="field">
        <td align="right"> <b><%= f.label :album_description %></b></td><td><%= f.text_field :album_description %></td><%unless @album.errors[:album_description].blank?%> <td class="validation_error_new_album">Album Description <%=@album.errors[:album_description]%></td>  <%end%>
      </div>
      </tr>
      <tr>
      <div class="actions">
         <td></td><td><%= f.submit %></td>
      </div>
      </tr>
    </table>
   </center>
<% end %>
