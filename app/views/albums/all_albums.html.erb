<center>
<div class="row">
  <div class="clear"></div>
<%= render :partial =>'home/marquee',:locals=>{:message =>"All Albums"} %> 
  <% count=0 %>
  <table >
  <% @albums.each do |album| %>
      <% if count%3==0 %>
        <tr>
      <% end %>
<td>

<table align="center">
<tr>
<td>
  
      <td align="center">
        <div class="col1">
          <div class="album_info">
            <font color="blue">Album Name : <%= album.album_name.titleize %></font>
          </div>
          <% if album.cover_photo %>
            <%= link_to image_tag( album.cover_photo.image.url(:original) , :height => "200" , :width => "200" , :title => "Show photos") , album_photos_path(album)  %>
          <% else %>
            <%= link_to image_tag( '/images/admin.jpeg' , :height => "200" , :width => "200" , :title => "Show photos") , album_photos_path(album)  %>
          <% end %>
          
          <div class="link">
            <font color="blue"> By <%= album.user.name.titleize %></font>
          </div> 
          <div class="album_link" style="margin-left:10px;">
    <%if !album.likes.map(&:user_id).include?(current_user.id) %><%= link_to("Like", {:controller => "likes", :action => "all_album_like", :id => album.id}, :remote=>true)%><%else%><%= link_to("Unlike", {:controller => "likes", :action => "all_album_unlike", :id => album.id}, :remote=>true)%><%end%> &nbsp; <%= ( link_to image_tag("/images/delete_img.jpeg" ,:height => "20" , :width => "20" , :title => "Delete album"), album_path(album), :confirm=> 'Are you sure?', :method=> :delete ) if (album.user_id == current_user.id) or is_admin?%>
          </div>
        </div>
</td>
</tr>
<tr>
<td align="center"></td>

<td style="padding-left: 90px;"><%=album.likes_count.to_s+" people liked" unless album.likes.blank?%> 
        </td>
</tr>
</table>
      </td>
      <% count+=1 %>
      <% if count%3==0%>
        </tr>
      <% end %>
  <% end %>
  </table>
  <%= will_paginate @albums %>
</div>
</center>
