<center>  
<div class="row">
    <%count=0%>
<table border=1>
 <% @photos.each do |photo| %>   
<%if count%3==0%>
<tr>
<%end%>
<td>
    <div class="col1">
       <%= image_tag photo.image.url(:medium), :height => "200" , :width => "200" %>
    </div>
      <div class="link">
         <%= link_to image_tag("/images/download_img.gif" ,:height => "20" , :width => "20" , :title => "Download photo"), download_album_photo_path(photo.album,photo) %>
         <%= link_to image_tag("/images/show_img.jpeg" ,:height => "20" , :width => "20" , :title => "Show photo"), album_photo_path(photo.album,photo) %>
         <%= ( link_to image_tag("/images/delete_img.jpeg" ,:height => "20" , :width => "20" , :title => "Delete photo"), album_photo_path(photo.album,photo), confirm: 'Are you sure?', method: :delete ) if photo.is_owner?(current_user)%>
      </div> 
</td>
<%count+=1%>
<if count%3==0%>
</tr>
<%end%>
 <% end %>
</table>
<%=will_paginate @photos %>
</div>
</center>

